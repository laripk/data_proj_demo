<% fieldname ||= :nil %>
<%= field_set_tag "Filter on #{fieldname.to_s.humanize.titlecase}", :id => "filter_#{fieldname.to_s}", :class => 'field' do %>
   <%= render 'shared/field_description', :fieldname => fieldname %>
	<%= label_tag "filter[#{fieldname}_gte]", "Greater than or equal to ( >= )" %>
	<%= number_field_tag "filter[#{fieldname}_gte]", @filter["#{fieldname}_gte".to_sym] %>
	<br />
	<%= label_tag "filter[#{fieldname}_lte]", "Less than or equal to ( <= )" %>
	<%= number_field_tag "filter[#{fieldname}_lte]", @filter["#{fieldname}_lte".to_sym] %>
	<br />
	<!-- span class='note'>min/max</span -->
   <%= button_to_function 'Remove this Filter', "remove_filter('#{fieldname}')", :class => 'rightme hidden' %>
<% end %>
